{
    "mcpServers": {
        "github.com/github/github-mcp-server": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-e",
                "GITHUB_PERSONAL_ACCESS_TOKEN",
                "-e",
                "GITHUB_TOOLSETS",
                "ghcr.io/github/github-mcp-server"
            ],
            "env": {
                "GITHUB_TOOLSETS": "repos,issues,pull_requests,actions,code_security"
            }
        }
    },
    "inputs": [
        {
            "type": "promptString",
            "id": "github_token",
            "description": "GitHub Personal Access Token",
            "password": true
        }
    ]
}